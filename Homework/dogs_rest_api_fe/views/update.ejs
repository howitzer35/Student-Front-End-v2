<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Dog</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="/update" method="POST">
  <div class="form-group">
    <label for="dog_id">SELECT A DOG TO UPDATE</label><br/>

    <select class="selectpicker" id="dog_id" name="dog_id" data-live-search="true" data-header="Select a dog" title="Select a dog">
    <% if(typeof dogs != "undefined" && dogs.length > 0){ %>
      <% dogs.forEach(function(dog){ %>
        <option value="<%= dog.dog_id %>">
          <%= dog.name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Dog</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateDogForm">
  <input type="hidden" name="dog_id" id="dog_id" value="">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label"> Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="breed" class="col-sm-2 control-label">Breed</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="breed" name="breed" placeholder="Breed" required>
    </div>
  </div>
  <div class="form-group">
    <label for="sex" class="col-sm-2 control-label">Sex</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="sex" name="sex" placeholder="Male/Female" required>
    </div>
  </div>
  <div class="form-group">
    <label for="age" class="col-sm-2 control-label">Age</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="age" name="age" placeholder="2 years">
    </div>
  </div>
  <div class="form-group">
    <label for="height" class="col-sm-2 control-label">Height in Inches</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="height" name="height" placeholder="20">
    </div>
  </div>
  <div class="form-group">
    <label for="weight" class="col-sm-2 control-label">Weight in Pounds</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="weight" name="weight" placeholder="50">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update that Pup</button>
    </div>
  </div>
</form>
